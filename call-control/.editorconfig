# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100
tab_width = 8

[*.{js,css,json,html,yml,yaml,sh}]
indent_style = space
indent_size = 2

[*.md]
indent_size = 4
max_line_length = 80

[Makefile]
indent_style = tab
indent_size = tab

[.git/COMMIT_EDITMSG]
max_line_length = 72
